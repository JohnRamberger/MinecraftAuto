<UserControl x:Class="MinecraftAuto.Presets.MouseClickPresetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <StackPanel>
        <TextBlock Text="Delay 1 (ms)" FontWeight="Bold" Margin="0,0,0,10"/>
        <Slider x:Name="Delay1Slider" Minimum="1" Maximum="500" Value="{Binding Delay1}" TickFrequency="1" IsSnapToTickEnabled="True"/>
        <TextBlock Text="{Binding Delay1, StringFormat='Delay 1: {0} ms'}" Margin="0,10,0,0"/>

        <TextBlock Text="Delay 2 (ms)" FontWeight="Bold" Margin="0,20,0,10"/>
        <Slider x:Name="Delay2Slider" Minimum="1" Maximum="500" Value="{Binding Delay2}" TickFrequency="1" IsSnapToTickEnabled="True"/>
        <TextBlock Text="{Binding Delay2, StringFormat='Delay 2: {0} ms'}" Margin="0,10,0,0"/>

        <TextBlock Text="Offset (ms)" FontWeight="Bold" Margin="0,20,0,10"/>
        <Slider x:Name="OffsetSlider" Minimum="0" Maximum="100" Value="{Binding Offset}" TickFrequency="1" IsSnapToTickEnabled="True"/>
        <TextBlock Text="{Binding Offset, StringFormat='Offset: {0} ms'}" Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>
